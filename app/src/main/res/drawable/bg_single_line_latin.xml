<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item xmlns:android="http://schemas.android.com/apk/res/android"
        android:id= "@+id/first_section">
        <layer-list>
            <item android:left = "10dp" android:right = "10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/single_line_line" />
                </shape>
            </item>
            <item android:bottom="0.5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/single_line_bg" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/first_section">
        <layer-list>
            <item android:left = "10dp" android:right = "10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/single_line_line" />
                </shape>
            </item>
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/single_line_bg" />
                </shape>
            </item>
        </layer-list>
    </item>

</layer-list>
