<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@android:color/background_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_choose_language"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/settings_title_text_size"
            android:textStyle="bold"/>
        <com.rey.material.widget.Spinner
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:id = "@+id/language_spinner"
            style="@style/Material.Widget.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:spn_dividerColor="@color/single_line_line"
            app:spn_dividerHeight="2dp"
            app:rd_style="@style/FlatButtonRippleStyle"
            app:spn_label="@string/settings_choose_language_label"/>

    </LinearLayout>
    <com.rey.material.widget.Button
        android:id="@+id/apply_settings_btn"
        android:layout_height="50dp"
        android:layout_width="90dp"
        android:layout_margin="20dp"
        style="@style/FlatButtonRippleStyle"
        android:text = "@string/settings_apply"
        android:textColor="@android:color/tertiary_text_dark"
        app:rd_delayClick="afterRelease"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>